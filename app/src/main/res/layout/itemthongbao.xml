<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagethongbao"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/km1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textthongbao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TUẦN PHIM SINH TỬ - ƯU ĐÃI CHẤT LỪ"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/texttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textthongbao"
                    android:gravity="center"
                    android:text="11:14"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/textday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textthongbao"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/texttime"
                    android:gravity="center"
                    android:text="31/10/2023"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>