<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activity.Information_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarinfomation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1D41FF"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin phim"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_sh"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/imageinfomation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/datrung"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvtenphimìnomation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vầng trăng máu"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/chua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tenphim"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/haid"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/haid" />

                    <Button
                        android:id="@+id/btndatve"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/buttondatv"
                        android:text="Đặt vé"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvnoidunginfomation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sau bao ngày chờ đợi, dự án điện ảnh vầng trăng máu đã được ra mắt với rất nhiều sự mong chờ. Dự đoán sẽ bùng nổ tất cả các rạp mùa Hallowen"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/kiemduyet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kiểm duyệt"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvkiemduyetinfnomation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/kiemduyet"
                            android:text="Phim phổ biến cho mọi độ tuổi"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/khoichieu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvkiemduyetinfnomation"
                            android:layout_marginTop="10dp"
                            android:text="Khởi chiếu"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tvkhoichieuinfomation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvkiemduyetinfnomation"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/khoichieu"
                            android:text="20/10/2023"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/daodien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvkhoichieuinfomation"
                            android:layout_marginTop="10dp"
                            android:text="Đạo diễn"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvdaodieninfomation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvkhoichieuinfomation"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/daodien"
                            android:text="Nguyễn Minh Nhựt"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/thoiluong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvdaodieninfomation"
                            android:layout_marginTop="10dp"
                            android:text="Thời gian"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvthoiluonginfomation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvdaodieninfomation"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/daodien"
                            android:text="109p"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>