<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_sh"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/image_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/datrung"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:layout_below="@id/card_image_sh"
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/haid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/haid" />
    <TextView
        android:layout_marginLeft="3sp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:id="@+id/titleShin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Những đứa vô tri"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvthoigianshimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 168p" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "/>
        <TextView
            android:id="@+id/tvngaychieushimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 03/11/2023" />
    </LinearLayout>
</RelativeLayout>